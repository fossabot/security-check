#!/usr/bin/env bash
#-------------------------------------------------------------------------------
#
# Build
#
#-------------------------------------------------------------------------------

DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
DIR_ROOT="${DIR/\/bin/}"
DIR_CURRENT="$(pwd)"

# Include shared function definitions
cd "${DIR}" || exit
source "./_functions"

cd "${DIR_ROOT}" || exit

ensure go mod vendor

ensure go build -mod=vendor -o ./security-check

cd "${DIR_CURRENT}" || exit
