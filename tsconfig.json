{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "jsx": "react",
    "lib": ["es2015", "es2017", "dom"],
    "module": "commonjs",
    "noImplicitAny": false,
    "paths": { "components/*": ["client/components/*", "client/containers/*"] },
    "removeComments": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["client/**/*"]
}
