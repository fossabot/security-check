#!/usr/bin/env bash
#-------------------------------------------------------------------------------
#
# Lint
#
#-------------------------------------------------------------------------------

DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
DIR_ROOT="${DIR/\/bin/}"
DIR_CURRENT="$(pwd)"

# Include shared function definitions
cd "${DIR}" || exit
source "./_functions"

cd "${DIR_ROOT}" || exit

ensure yarn lint

ensure gofmt -l ./go && gofmt -l ./main.go

cd "${DIR_CURRENT}" || exit
